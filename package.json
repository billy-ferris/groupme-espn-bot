{
  "name": "groupme-espn-bot",
  "version": "1.0.0",
  "description": "An ESPN GroupMe bot",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc --build",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "nodemon lib/index.js",
    "dev:ts": "npm run build:ts -- --watch",
    "lint": "npm-run-all -c lint:*",
    "lint:eslint": "eslint --fix \"src/**/*.{js,ts}\"",
    "lint:prettier": "prettier --ignore-path .eslintignore --write \"src/**/*.{js,ts}\"",
    "prepare": "npx simple-git-hooks",
    "start": "ts-node lib/index.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "William Ferris <waferris2@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/billy-ferris/groupme-espn-bot"
  },
  "license": "MIT",
  "dependencies": {
    "@types/cron": "^1.7.3",
    "axios": "^0.24.0",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "espn-fantasy-football-api": "^0.16.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.6",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm test"
  }
}
